@model Votex.Models.Core.Domain.Election
@{
    ViewBag.Title = "Election";
}

<h3>@ViewBag.Title</h3>

<hr/>

@using (Html.BeginForm("Save", "Elections"))
{
    <div class="form-group">
        @Html.LabelFor(e => e.Office)
        @Html.TextBoxFor(e => e.Office, new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.Office)
    </div>
    <div class="form-group">
        @Html.CheckBoxFor(e => e.IsPartisan)
        @Html.LabelFor(e => e.IsPartisan)
    </div>
    @Html.AntiForgeryToken()
    @Html.HiddenFor(e => e.Id)

    <a href="@Url.Action("Index", "Elections")" class="btn btn-warning">
        @Html.FontAwesome(FontAwesomeIconSet.Backward)
        Back
    </a>
    <button type="submit" class="btn btn-success">@Html.FontAwesome(FontAwesomeIconSet.Save) Save</button>
}
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}





