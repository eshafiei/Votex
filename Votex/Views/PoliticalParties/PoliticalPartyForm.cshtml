@model Votex.ViewModels.PoliticalPartyViewModel

@{
    ViewBag.Title = "PoliticalPartyForm";
}

<h2>Political Party</h2>

<hr />

@using (Html.BeginForm("Save", "PoliticalParties"))
{
    <div class="form-group">
        @Html.LabelFor(p => p.Name)
        @Html.TextBoxFor(p => p.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.Name)
    </div>
    <div class="form-group">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(p => p.Id)
        <a href="@Url.Action("Index", "PoliticalParties")" class="btn btn-warning">
            @Html.FontAwesome(FontAwesomeIconSet.Backward)
            Back
        </a>
        <button type="submit" class="btn btn-success">@Html.FontAwesome(FontAwesomeIconSet.Save) Save</button>
    </div>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}


