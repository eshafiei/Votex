@model Votex.ViewModels.VoterViewModel

@{
    ViewBag.Title = "Voter Information";
}

<h3>@ViewBag.Title</h3>

<hr/>

@using (Html.BeginForm("Save", "Voters"))
{
    <div class="form-group">
        @Html.LabelFor(p => p.FirstName)
        @Html.TextBoxFor(p => p.FirstName, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.FirstName)
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.LastName)
        @Html.TextBoxFor(p => p.LastName, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.LastName)
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.BirthDate)
        @Html.TextBox("BirthDate", String.Format("{0: dd MMM yyyy}", Model.BirthDate), new { @class = "form-control datePicker" })
        @Html.ValidationMessageFor(p => p.BirthDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.ElectoralDistrictId)
        @Html.DropDownListFor(p => p.ElectoralDistrictId, new SelectList(Model.ElectoralDistricts, "Id", "Name"), "Not Set", new {@class="form-control"})
        @Html.ValidationMessageFor(p => p.ElectoralDistrictId)
    </div>
    <div class="form-group">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(p => p.Id)
        <a href="@Url.Action("Index", "Voters")" class="btn btn-warning">
            @Html.FontAwesome(FontAwesomeIconSet.Backward)
            Back
        </a>
        <button type="submit" class="btn btn-success">@Html.FontAwesome(FontAwesomeIconSet.Save) Save</button>
    </div>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
